<ul class="sidebar-list">
  <li class="sidebar-item">
    <%= link_to "Listing", listing_food_path, class: "sidebar-link active" %>
    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
  </li>
  <li class="sidebar-item">
    <%= link_to "Price", pricing_food_path, class: "sidebar-link active" %>
    <% if !@food.price.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Description", description_food_path, class: "sidebar-link active" %>
    <% if !@food.listing_name.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Photos", photo_upload_food_path, class: "sidebar-link active" %>
    <% if !@food.photos.blank? %>
      <span id="photo_check" class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
  <li class="sidebar-item">
    <%= link_to "Ingredients", ingredients_food_path, class: "sidebar-link active" %>

    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>

  </li>
  <li class="sidebar-item">
    <%= link_to "diets", diets_food_path, class: "sidebar-link active" %>

    <span class="pull-right text-babu"><i class="fa fa-check"></i></span>

  </li>
  <li class="sidebar-item">
    <%= link_to "Location", location_food_path, class: "sidebar-link active" %>
    <% if !@food.address.blank? %>
      <span class="pull-right text-babu"><i class="fa fa-check"></i></span>
    <% end %>
  </li>
</ul>
<hr/>

<% is_ready = !@food.active && !@food.price.blank? && !@food.listing_name.blank? && !@food.photos.blank? && !@food.address.blank? %>


<%= form_for @food do |f| %>
  <%= f.hidden_field :active, value: true %>
  <%= f.submit "Publish", id: "publish_button", class: "btn btn-normal btn-block", disabled: !is_ready %>
<% end %>

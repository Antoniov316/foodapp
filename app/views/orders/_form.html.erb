<div class="panel panel-default">
  <div class="panel-heading">
    <span><i class="fa fa-bolt" style="color: #ffb400"></i> $<%= @food.price %></span>
    <span class="pull-right">Per Order</span>
  </div>
  <div class="panel-body">
    <%= form_for([@food, @food.orders.new]) do |f| %>
      <div class="row">
        <div class="col-md-6">
          <label>First Order</label>
          <%= f.text_field :start_date, readonly: true, placeholder: "Start Date", class: "form-control datepicker" %>
        </div>
        <div class="col-md-6">
          <label>Last Order</label>
          <%= f.text_field :end_date, readonly: true, placeholder: "End Date", class: "form-control datepicker", disabled: true %>
        </div>
      </div>

      <h4 class="message-alert text-center"><span id="message"></span></h4>
      <div id="preview" style="display: none">
        <table class="order-table">
          <tbody>
            <tr>
              <td>Price</td>
              <td class="text-right">$<%= @food.price %></td>
            </tr>
            <tr>
              <td>Order Day(s)</td>
              <td class="text-right">x <span id="order_days"></span></td>
            </tr>
            <tr>
              <td class="total">Total</td>
              <td class="text-right">$<span id="order_total"></span></td>
            </tr>
          </tbody>
        </table>
      </div>

      <br/>

      <%= f.submit "Order Now", id: "btn_book", class: "btn btn-normal btn-block", disabled: true %>
    <% end %>
  </div>
</div>

<script>

  function checkDate(date) {
    dmy = date.getDate() + "-" + (date.getMonth() + 1) + "-" + date.getFullYear();
    return [$.inArray(dmy, unavailableDates) == -1];
  }

  $(function() {

    unavailableDates = [];

    $.ajax({
      url: '<%= preload_food_path(@food) %>',
      dateTyp: 'json',
      success: function(data) {

        $.each(data, function(arrID, arrValue) {
            for(var d = new Date(arrValue.start_date); d <= new Date(arrValue.end_date); d.setDate(d.getDate() + 1)) {
              unavailableDates.push($.datepicker.formatDate('d-m-yy', d));
            }
        });

        $('#order_start_date').datepicker({
          dateFormat: 'mm-dd-yy',
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: checkDate,
          onSelect: function(selected) {
            $('#order_end_date').datepicker("option", "minDate", selected);
            $('#order_end_date').attr("disabled", false);

            var start_date = $('#order_start_date').datepicker('getDate');
            var end_date = $('#order_end_date').datepicker('getDate');
            var days = (end_date - start_date)/1000/60/60/24 + 1;

            var input = {
              'start_date': start_date,
              'end_date': end_date
            }

            $.ajax({
              url: '<%= preview_food_path(@food) %>',
              data: input,
              success: function(data) {

                if(data.conflict) {
                  $('#message').text("You need to order at least one meal");
                  $('#preview').hide();
                  $('#btn_book').attr('disabled', true);
                } else {
                  $('#message').text("");
                  $('#preview').show();
                  $('#btn_book').attr('disabled', false);

                  var total = days * <%= @food.price %>
                  $('#order_days').text(days);
                  $('#order_total').text(total);
                }
              }
            });

          }
        });

        $('#order_end_date').datepicker({
          dateFormat: 'mm-dd-yy',
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: checkDate,
          onSelect: function(selected) {
            $('#order_start_date').datepicker("option", "maxDate", selected);

            var start_date = $('#order_start_date').datepicker('getDate');
            var end_date = $('#order_end_date').datepicker('getDate');
            var days = (end_date - start_date)/1000/60/60/24 + 1;

            var input = {
              'start_date': start_date,
              'end_date': end_date
            }

            $.ajax({
              url: '<%= preview_food_path(@food) %>',
              data: input,
              success: function(data) {

                if(data.conflict) {
                  $('#message').text("These dates are not available.");
                  $('#preview').hide();
                  $('#btn_book').attr('disabled', true);
                } else {
                  $('#message').text("");
                  $('#preview').show();
                  $('#btn_book').attr('disabled', false);

                  var total = days * <%= @food.price %>
                  $('#order_days').text(Order days);
                  $('#order_total').text(total);
                }
              }
            });
          }
        });
      }
    });



  });
</script>

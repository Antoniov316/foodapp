
<%= form_tag search_path, method: :get do %>
  <div class="row">
    <div class="col-md-6">
      <%= text_field_tag :search, params[:search], placeholder: "Where are you located?", class: "form-control", id: "autolocation" %>
    </div>


  </div>
  <br/><br/>

  <div class="row">
    <div class="col-md-offset-4 col-md-4">
      <%= submit_tag "Search", class: "btn btn-normal btn-block" %>
    </div>
  </div>
<% end %>

<br/><hr/><br/>

<!-- HOMES -->
<div><h3>Meals available near you</h3></div>
<br/>





<div class="row">
  <% @foods.each do |food| %>
      <div class="col-md-4">
        <div class="panel panel-deafult">
          <div class="panel-heading preview">
            <%= image_tag food.cover_photo(:medium) %>
          </div>
          <div class="panel-body">
            <%= link_to food.listing_name, food %>
          </div>
        </div>
     </div>
      <% end %>
</div>

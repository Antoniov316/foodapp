<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-normal" data-toggle="modal" data-target="#myModal_<%= order.id %>">

  Review Your Chef

</button>

<!-- Modal -->
<div id="myModal_<%= order.id %>" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title text-left">Review Your Chef</h4>
      </div>
      <div class="modal-body">
        <%= form_for current_user.foodie_reviews.new do |f| %>
                <div class="form-group text-center">
                  <div id="stars_<%= order.id %>"></div>
                </div>
                <div class="form-group">
                  <%= f.text_area :comment, rows: 3, class: "form-control" %>
                </div>

                <%= f.hidden_field :food_id, value: order.food.id %>
                <%= f.hidden_field :order_id, value: order.id %>
                <%= f.hidden_field :chef_id, value: order.food.user.id %>

                <div class="text-center">
                  <%= f.submit "Add Review", class: "btn btn-normal" %>
                </div>
            <% end %>
          </div>
        </div>

      </div>
    </div>

    <script>
      $('#stars_<%= order.id %>').raty({
        path: '/assets',
        scoreName: 'foodie_review[star]',
        score: 1
      });
    </script>
